        function checkValidation(){
            //console.log('ssss');
            var firstCheck = true;
            var secondCheck = true;
            var thirdcheck = true;
            $('.inputtxt').each(function(){
                //console.log($(this).parent().parent().html());
                if(!$(this).val()){
                    //$(this).parent().next().removeClass('slds-hide');
                    $(this).parent().parent().addClass('slds-has-error');
                    //$(this).next().removeClass('slds-hide');
                    firstCheck = false;
                }else{ 
                    //$(this).parent().next().addClass('slds-hide');
                    $(this).parent().parent().removeClass('slds-has-error');
                }
            });
            if(!$('[id$=phoneNumber]').val()){
                $('[id$=phoneNumber]').css('border','2px solid rgb(194, 57, 52)');
                thirdcheck = false;
            }else{
                $(this).removeAttr('style');
            }
            $('.inputsel').each(function(){
                if(!$(this).val()){
                    $(this).parent().parent().addClass('slds-has-error');
                    secondCheck = false;
                }else{
                    $(this).parent().parent().removeClass('slds-has-error');
                }
            });
            var checkboxflag = $('.termsandconditioncheckbox').prop("checked");
            if(checkboxflag == false){
                $('.errorbox').css('border','2px solid red');
            }else{
                $('.errorbox').css('border','1px solid #dcdcdc');
