                actualnumber = $('[class$=btn-cc]').text().trim()+''+$('[id$=phoneNumber]').val();
                console.log('actual number = '+actualnumber);
                updateDetail(actualnumber);
            }
        }
        function redirect(){
            window.location.href = "https://login.aureusacademy.com/setpassword?id={!parentid}"
        }
        
